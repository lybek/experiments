<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enterName"
    android:elevation="1dp"
    android:background="@drawable/back"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="tarkvaratehnika.ttu.lapseaed.EnterNameActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/giraffeupside"
        android:id="@+id/giraffe2"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/centreGuidline"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/topGuideline"
        android:paddingRight="30dp"
        android:adjustViewBounds="false" />

    <ImageView
        android:layout_width="283dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/bubble"
        android:id="@+id/bubble"
        android:rotation="-50"
        app:layout_constraintTop_toTopOf="@+id/giraffe2"
        app:layout_constraintRight_toRightOf="@+id/giraffe2"
        android:scaleType="fitCenter"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/giraffe2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="Hei! Mis on su nimi?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greeting"
        android:rotation="-40"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bubble"
        app:layout_constraintLeft_toLeftOf="@+id/bubble"
        app:layout_constraintTop_toTopOf="@+id/bubble"
        app:layout_constraintRight_toRightOf="@+id/bubble"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="49dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/play1"
        android:id="@+id/go"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/playButtonLeftGuideline"
        app:layout_constraintRight_toLeftOf="@+id/playButtonRightGuideline" />

    <EditText
        android:layout_width="330dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/name"
        android:backgroundTint="@android:color/background_light"
        android:background="@android:color/background_light"
        android:textColor="?attr/actionModeSplitBackground"
        android:textAlignment="center"
        android:elevation="1dp"
        android:layout_height="49dp"
        android:textSize="30sp"
        android:hint="Sinu nimi"
        android:gravity="center"
        android:ellipsize="end"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/giraffe2"
        android:capitalize="words" />

    <android.support.constraint.Guideline
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:id="@+id/centreGuidline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="277dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.42033383" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topGuideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButtonLeftGuideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25304136"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="104dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButtonRightGuideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.756691"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="311dp" />


</android.support.constraint.ConstraintLayout>