<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/highScore"
    android:background="@drawable/back6"
    tools:context="tarkvaratehnika.ttu.lapseaed.highScores.PicGameHighScoreActivity">
    >

    <ImageView
        android:layout_width="327dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/cup"
        android:id="@+id/trophy"
        android:textAlignment="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gameName"
        app:layout_constraintBottom_toTopOf="@+id/levels"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="30sp"
        android:typeface="sans"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/trophy"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gameName"
        app:layout_constraintLeft_toLeftOf="@+id/trophy"
        app:layout_constraintRight_toRightOf="@+id/trophy"
        app:layout_constraintVertical_bias="0.32999998" />

    <ImageView
        android:layout_width="174dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/play1"
        android:id="@+id/playButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:onClick="onClickPlayButtonPic"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/kes"
        android:id="@+id/gameName"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/levels"
        android:weightSum="15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/easy"
            android:onClick="onClickPicEasy"
            app:srcCompat="@drawable/kerge1"
            android:layout_weight="5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/keskmine"
            android:id="@+id/medium"
            android:onClick="onClickPicMed"
            android:layout_weight="5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/raske1"
            android:id="@+id/hard"
            android:onClick="onClickPicHard"
            android:layout_weight="5" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backbutton"
        android:id="@+id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:onClick="onClickBack" />
</android.support.constraint.ConstraintLayout>